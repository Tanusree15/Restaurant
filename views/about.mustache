<!DOCTYPE html>
<html lang="en">
  <head>
    {{>head}}
  </head>
  <body>

	  {{>nav}}

    <section class="hero-wrap hero-wrap-2" style="background-image: url('images/about1.jpg');" data-stellar-background-ratio="0.5">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
          <div class="col-md-9 ftco-animate text-center">
            <h1 class="mb-2 bread">About Us</h1>
            <p class="breadcrumbs"><span class="mr-2"><a href="/">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>About <i class="ion-ios-arrow-forward"></i></span></p>
          </div>
        </div>
      </div>
    </section>

			<section class="ftco-section ftco-wrap-about ftco-no-pb ftco-no-pt">
  			<div class="container">
  				<div class="row no-gutters">
  					<div class="col-sm-7 wrap-about py-5 ftco-animate">
  	          <div class="heading-section mt-5 mb-4">
  	          	<div class="pl-lg-5 ml-md-5">
  		          	<span class="subheading">About Us</span>
  		            <h2 class="mb-4">{{page.about.header}}</h2>
  	            </div>
  	          </div>
  	          <div class="pl-lg-5 ml-md-5">
                <p>{{page.about.subtext}} </p>
  		            <h3 class="mt-5">Our Signature Items</h3>
  							<div class="thumb my-4 d-flex">

                  {{#page.about.images}}
    	            	<a href="#" class="thumb-menu pr-md-4 text-center">
    	            		<div class="img" style="background-image: url({{image}});"></div>
    	            		<h4>{{caption}}</h4>
    	            	</a>
                  {{/page.about.images}}


  	            </div>
  						</div>
  					</div>
            <div class="col-sm-5 img img-2 d-flex align-items-center justify-content-center justify-content-md-end" style="background-image: url({{page.about.bg_image}}); position: relative"></div>

  				</div>
  			</div>
  		</section>


		<section class="ftco-section ftco-counter img" id="section-counter" style="background-image: url(images/experience.jpg);" data-stellar-background-ratio="0.5">
    	<div class="container">
    		<div class="row d-md-flex align-items-center justify-content-center">
    			<div class="col-lg-10">
    				<div class="row d-md-flex align-items-center">
		          <div class="col-md d-flex justify-content-center counter-wrap ftco-animate">
		            <div class="block-18">
		              <div class="text">
		                <strong class="number" data-number="10">0</strong>
		                <span>Years of Experienced</span>
		              </div>
		            </div>
		          </div>
		          <div class="col-md d-flex justify-content-center counter-wrap ftco-animate">
		            <div class="block-18">
		              <div class="text">
		                <strong class="number" data-number="20000">0</strong>
		                <span>Happy Customers</span>
		              </div>
		            </div>
		          </div>

		          <div class="col-md d-flex justify-content-center counter-wrap ftco-animate">
		            <div class="block-18">
		              <div class="text">
		                <strong class="number" data-number="300">0</strong>
		                <span>Working Days</span>
		              </div>
		            </div>
		          </div>
	          </div>
          </div>
        </div>
    	</div>
    </section>

    <section class="ftco-section">
			<div class="container">
				<div class="row justify-content-center mb-5 pb-2">
          <div class="col-md-7 text-center heading-section ftco-animate">
          	<span class="subheading">{{page.chef.subheader}}</span>
            <h2 class="mb-4">{{page.chef.header}}</h2>
          </div>
        </div>
				<div class="row">
          {{#page.chef.people}}
					<div class="col-md-6 col-lg-3 ftco-animate">
						<div class="staff">
							<div class="img" style="background-image: url({{image}});"></div>
							<div class="text px-4 pt-4">
								<h3>{{name}}</h3>
								<span class="position mb-2">{{position}}</span>
								<div class="faded">
									<p>{{description}}</p>
									<ul class="ftco-social d-flex">
		                <li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
		                <li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
		                <li class="ftco-animate"><a href="#"><span class="icon-google-plus"></span></a></li>
		                <li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
		              </ul>
	              </div>
							</div>
						</div>
					</div>
          {{/page.chef.people}}
				</div>
			</div>
		</section>




<section class="ftco-section testimony-section" style="background-image: url(images/testimony2.jpg);" data-stellar-background-ratio="0.5">
  <div class="container">
    <div class="row justify-content-center mb-5 pb-2">
      <div class="col-md-7 text-center heading-section heading-section-white ftco-animate">
        <span class="subheading">{{page.testimony.subheader}}</span>
        <h2 class="mb-4">{{page.testimony.header}}</h2>
      </div>
    </div>
    <div class="row ftco-animate justify-content-center">
      <div class="col-md-7">
        <div class="carousel-testimony owl-carousel ftco-owl">

        {{#page.testimony.customer}}
          <div class="item">
            <div class="testimony-wrap text-center py-4 pb-5">
              <div class="user-img mb-4" style="background-image: url({{image}})">
                <span class="quote d-flex align-items-center justify-content-center">
                  <i class="icon-quote-left"></i>
                </span>
              </div>
              <div class="text p-3">
                <p class="mb-4">{{quote}}</p>
                <p class="name">{{name}}</p>
                <span class="position">{{position}}</span>
              </div>
            </div>
          </div>
        {{/page.testimony.customer}}
        </div>
      </div>
    </div>
  </div>
</section>



  {{>footer}}
  {{>scripts}}


  </body>
</html>
